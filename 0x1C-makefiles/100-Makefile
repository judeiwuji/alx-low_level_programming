CC = gcc
SRC = .c
OBJ = .o
NAME = school
RM := rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: ${NAME} m.h

$(NAME): main${OBJ} school${OBJ}

%${OBJ}: %${SRC}
	${CC} ${CFLAGS} -c -o $@ $<

clean:
	${RM} -f *~ *.swp ${NAME}

oclean:
	${RM} -f main${OBJ} school${OBJ}

fclean: clean oclean

re: oclean all
